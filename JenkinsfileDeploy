pipeline {
    environment {
        dockerImage = ''
        imageName = 'nlafontaine/capstone-b-safe'
        registryCred = 'Dockerhub'
        imageTag = "latest"
    }
    agent { label 'Jenkins-Slave2'}

    options { 
         skipDefaultCheckout()
     }

     triggers {
         upstream(upstreamProjects: 'B-Safe-Docker-Deployment')
     }

    stages {
        stage('Checkout') {
            steps {
                echo 'get image from Dockerhub'
            }
        }
        stage('Run Image') {
            steps {
                echo 'run the image'
            }
        }  
    }
}